                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/productName8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vidio"
                        android:textColor="@color/white"
                        android:textSize="17.71sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotoitalic"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:id="@+id/btnTopUp8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Up"
                        android:textStyle="bold"
                        style="@style/GradiasiButton"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PULSA PRABAYAR"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/tiny"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- Product 9 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/product_background"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/productImage9"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/telkomsel"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/productName9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telkomsel"
                        android:textColor="@color/white"
                        android:textSize="17.71sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotoitalic"
