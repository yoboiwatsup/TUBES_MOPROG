<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bckground"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaksi Berhasil!!"
        android:textSize="29.9sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/marker"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terimakasih telah berbelanja"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:fontFamily="@font/days"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_back_to_topup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/GradientButton"
        android:textColor="@android:color/white"
        android:text="Back to Home"/>

</LinearLayout>
