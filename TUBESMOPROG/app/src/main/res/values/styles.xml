<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/dark_grey</item>
        <item name="android:fontFamily">@font/oxanium</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:fontFamily">@font/robotoitalic</item>
        <item name="android:fontFamily">@font/tiny</item>
        <item name="android:fontFamily">@font/marker</item>
        <item name="android:fontFamily">@font/norwill</item>
        <item name="android:fontFamily">@font/days</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="GradientButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="GradiasiButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_outline_dua</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:fontFamily">@font/oxanium</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
