                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/productImage4"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/genshin"
                    android:scaleType="centerCrop"/>

                <LinearLayout
