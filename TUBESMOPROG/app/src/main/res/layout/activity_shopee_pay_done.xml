<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckground"
    tools:context=".ShopeePayDone">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bayar transaksi kamu, yuk!"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batas waktu bayar: "
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/shopee_pay_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Shopee Pay: "
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:paddingTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Status Transaksi"
          android:textStyle="bold"
          android:textColor="@android:color/white"
          android:textSize="18sp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="BELUM DIPROSES"
          android:textColor="@android:color/holo_orange_dark"
          android:textStyle="bold"
          android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

      <TextView
          android:id="@+id/product_details"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Detail Produk: "
          android:textStyle="bold"
          android:textSize="18sp"
          android:textColor="@android:color/white"
          android:paddingTop="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cek_status_bayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cek Status Bayar"
        android:textStyle="bold"
        style="@style/GradientButton"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="30dp" />

  </LinearLayout>
</ScrollView>
